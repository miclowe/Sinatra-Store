<div id="products-list">
  <h3>Sinatra Store Products</h3>
  <div class="span4 form-box">
    <div>
      <form class="product-form" action="/products/<%= @id %>/destroy" method="POST">
        <fieldset>
          <legend>Delete Product</legend>
          <p>Are you sure you want to delete this product?</p>
          <div>
            <input type="submit" class="btn edit" value="Yes" />
            <a class="btn edit" href="/products">No</a>
          </div>
        </fieldset>
      </form>
    </div>
  </div>

  <div class="span8">
    <div class="list-display">
      <table class="table table-striped table-condensed table-hover">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Price</th>
          <th></th>
          <th></th>
        </tr>
        <tr>
          <td><%= @row['id'] %></td>
          <td><%= @row['name'] %></td>
          <td><%= @row['price'] %></td>
          <td>
            <% if @row['on_sale'] == "t" %>
              <img src="../../images/icon-sale.png" height=20px width=20px>
            <% end %>
          </td>
          <td>
            <a href="/products/<%= @row['id'] %>/search?q=<%= URI.escape(@row['name']) %>" target="_blank"><img src="../../images/twitter-icon.png" /></a>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>