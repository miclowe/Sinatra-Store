<div id="products">
  <table class="table">
    <tr>
      <td></th>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>On Sale</th>
    </tr>
    <% @rs.each do | row | %>
    <tr>
      <td>
        <a class="btn" href='/products/<%= row['id'] %>'>Update</a>
      </td>
      <td><%= row['id'] %></td>
      <td><%= row['name'] %></td>
      <td><%= row['price'] %></td>
      <td>
        <% if row['on_sale'] == "t" %>
          <img src="../icon-sale.png">
        <% end %>
      </td>
    </tr>
    <% end%>
  </table>
</div>

<a href="<%= @back %>">Home</a>
